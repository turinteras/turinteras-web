<!doctype html>
<html lang="{{ metadata.language }}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		<meta name="description" content="{{ description or metadata.description }}">

		{#- Atom and JSON feeds #}
		<link rel="alternate" href="/feed/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">
		<link rel="alternate" href="/feed/feed.json" type="application/json" title="{{ metadata.title }}">

		{#- <meta name="generator" content="{{ eleventy.generator }}"> #}

		{%- css %}{% include "public/css/styles.css" %}{% endcss %}
		<style>
			{% getBundle "css" %}
		</style>
	</head>
	<body>
		<a href="#skip" class="visually-hidden">Ir al contenido principal</a>

		<header>
			{#- <a href="/" class="home-link">{{ metadata.title }}</a> #}
			{% image "public/img/logo.png",
			"Logo de Turinteras",
			"logo" %}
			<nav>
				<h2 class="visually-hidden">Menú de navegación</h2>
				<ul class="nav">
					{%- for entry in collections.all | eleventyNavigation %}
						<li class="nav__item">
							<a href="{{ entry.url }}"{% if entry.url == page.url %} aria-current="page"{% endif %}>{{ entry.title }}</a>
						</li>
					{%- endfor %}
				</ul>
			</nav>
			<label for="lang" class="visually-hidden">Idioma</label>
			<select id="lang" class="lang-select">
				<option default>Español</option>
				<option>English</option>
				<option>Français</option>
				<option>Deustch</option>
				<option>日本語</option>
			</select>
		</header>

		<main id="skip">
			{{ content | safe }}
		</main>

		<footer></footer>

		<!-- Current page: {{ page.url | htmlBaseUrl }} -->
	</body>
</html>