---
layout: layouts/home.njk
eleventyNavigation:
  key: Itinerarios
  order: 2
pagination:
  data: collections.itineraries
  size: 4 
---

<h1>Itinerarios</h1>
<ol class=itineraries-list>
	{%- for itinerary in pagination.items %}
		<li class="itineraries-list__item{% if itinerary.url == url %} itineraries-list__item--active{% endif %}">
			<a href="{{ itinerary.url }}" class="itineraries-list__link">
				{% if itinerary.data.title %}
					{{ itinerary.data.title }}
				{% else %}
					<code>{{ itinerary.url }}</code>
				{% endif %}
			</a>
			<time class="itineraries-list__date" datetime="{{ itinerary.date | htmlDateString }}">{{ itinerary.date | readableDate }}</time>
		</li>
	{% endfor -%}
</ol>
<nav aria-labelledby="itineraries-pagination">
	<h2 id="itineraries-pagination">Paginaci√≥n</h2>
	<ol>
		{%- for pageEntry in pagination.pages %}
			<li>
				<a href="{{ pagination.hrefs[ loop.index0 ] }}" {% if page.url == pagination.hrefs[ loop.index0 ] %} aria-current="page" {% endif %}>Page {{ loop.index }}</a>
			</li>
		{%- endfor %}
	</ol>
</nav>
</ol>